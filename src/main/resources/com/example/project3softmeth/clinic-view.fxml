<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project3softmeth.ClinicManagerController">
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Schedule / Cancel">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="600.0">
                           <children>
                              <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label alignment="CENTER" contentDisplay="CENTER" text="Schedule or Cancel an Appointment">
                                       <font>
                                          <Font name="System Bold Italic" size="18.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label alignment="CENTER" contentDisplay="CENTER" text="Appointment Date">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <DatePicker fx:id="dateOfAppt" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label alignment="CENTER" contentDisplay="CENTER" text="Patient Information">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <TextField fx:id="firstName" promptText="First Name" />
                                    <TextField fx:id="lastName" promptText="Last Name" />
                                    <DatePicker fx:id="dateOfBirth" promptText="Date of Birth" />
                                 </children>
                              </VBox>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label alignment="CENTER" contentDisplay="CENTER" text="Visit Type">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Label>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                       <children>
                                          <RadioButton mnemonicParsing="false" text="Office Visit">
                                             <toggleGroup>
                                                <ToggleGroup fx:id="visitType" />
                                             </toggleGroup></RadioButton>
                                          <RadioButton layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Imaging Service" toggleGroup="$visitType" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <ComboBox fx:id="providersCombo" prefWidth="150.0" promptText="Provider" />
                                    <ComboBox fx:id="timeslotsCombo" prefWidth="150.0" promptText="Timeslot" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <Button fx:id="newAppt" mnemonicParsing="false" onAction="#newApptOnClick" text="Schedule New Appointment" />
                                    <Button fx:id="cancelAppt" mnemonicParsing="false" onAction="#cancelApptOnClick" text="Cancel Exisiting Appointment" />
                                 </children>
                              </HBox>
                              <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <HBox prefHeight="100.0" prefWidth="200.0">
                                       <children>
                                          <Button fx:id="clear" onAction="#clearOnClick" contentDisplay="CENTER" mnemonicParsing="false" text="Clear" textAlignment="CENTER" />
                                       </children>
                                    </HBox>
                                    <HBox id="cancelAppt" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="234.0">
                                       <children>
                                          <Button fx:id="loadProviders" onAction="#loadProvidersOnClick" contentDisplay="CENTER" mnemonicParsing="false" text="Load Providers" textAlignment="CENTER" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Reschedule">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Clinic Locations">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <TextArea editable="false" fx:id="outputArea" prefHeight="200.0" prefWidth="200.0" promptText="Output Area" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
